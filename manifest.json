{
    "name": "Nomad",
    "id": "nomad",
    "packaging_format": 1,
    "description": {
        "en": "Simple and flexible workload orchestrator"
    },
    "version": "1.5.1~ynh1",
    "url": "https://www.nomadproject.io/",
    "upstream": {
        "license": "MPL-2.0",
        "website": "https://www.nomadproject.io/",
        "admindoc": "https://www.nomadproject.io/docs",
        "code": "https://github.com/hashicorp/nomad"
    },
    "license": "MPL-2.0",
    "maintainer": {
        "name": "",
        "email": ""
    },
    "requirements": {
        "yunohost": ">= 4.3.0"
    },
    "multi_instance": false,
    "services": [
        "nginx"
    ],
    "arguments": {
        "install": [
            {
                "name": "domain",
                "type": "domain"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "default": true
            },
            {
                "name": "node_type",
                "type": "string",
                "ask": {
                    "en": "What kind of Nomad node you want to install ?"
                },
                "choices": [
                    "server",
                    "client"
                ],
                "default": "server"
            },
            {
                "name": "bootstrap_expect",
                "type": "string",
                "ask": {
                    "en": "[Server only] How many server nodes to wait for before bootstrapping ?"
                },
                "choices": [
                    "1",
                    "3",
                    "5",
                    "7",
                    "9"
                ],
                "default": "1",
                "help": {
                    "en": "For production, it's recommanded to have 3 to 5 server nodes."
                }
            },
            {
                "name": "retry_join",
                "type": "string",
                "ask": {
                    "en": "[Server only] What is the IP of another server to join ?"
                },
                "example": "192.168.1.100",
                "optional": true
            },
            {
                "name": "server_ip",
                "type": "string",
                "ask": {
                    "en": "[Client only] What is the IP of the Nomad server node ?"
                },
                "example": "192.168.1.100",
                "optional": true
            },
            {
                "name": "server_ip",
                "type": "string",
                "ask": {
                    "en": "[Client only] What is the IP of the Nomad server node ?"
                },
                "example": "192.168.1.100",
                "optional": true
            },
            {
                "name": "driver_lxc",
                "type": "boolean",
                "ask": {
                    "en": "[Client only] Do you want to install LXC driver ?"
                },
                "default": true,
                "help": {
                    "en": "It will also install lxc."
                }
            }
        ]
    }
}
